<link href="~/Content/Supervisor/Dashboard.css" rel="stylesheet" />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home - Edds Waffle</title>
</head>
<body>

    <section class="callaction">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="big-cta">
                        <div class="cta-text">
                            <h2><span>Point of Sale</span> powered by <i>Edds Waffle</i></h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <section id="content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="box">
                                    <div class="box-gray aligncenter">
                                        <h4>Product Management</h4>
                                        <div class="icon">
                                            <i class="fa fa-sticky-note fa-3x"></i>
                                        </div>
                                        <p>
                                            Simply set the brand new product from your restaurant.
                                        </p>

                                    </div>
                                    <div class="box-bottom">
                                        <a href="#">Learn more</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="box">
                                    <div class="box-gray aligncenter">
                                        <h4>History</h4>
                                        <div class="icon">
                                            <i class="fa fa-calendar-check-o fa-3x"></i>
                                        </div>
                                        <p>
                                            See the latest report from your transaction history.
                                        </p>

                                    </div>
                                    <div class="box-bottom">
                                        <a href="#">Learn more</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="box">
                                    <div class="box-gray aligncenter">
                                        <h4>Sales Monitoring</h4>
                                        <div class="icon">
                                            <i class="fa fa-area-chart fa-3x"></i>
                                        </div>
                                        <p>
                                            Get the latest information from your historical data.
                                        </p>

                                    </div>
                                    <div class="box-bottom">
                                        <a href="#">Learn more</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- divider -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="solidline">
                        </div>
                    </div>
                </div>
                <!-- end divider -->

            </div>
        </section>
        </body>
        </html>
